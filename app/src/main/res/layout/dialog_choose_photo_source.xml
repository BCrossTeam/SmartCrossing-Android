<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ten"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fifty"
            android:id="@+id/take_photo_relative">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:id="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/add_photo_from_camera"
                android:layout_marginLeft="@dimen/thirteen"
                android:layout_marginStart="@dimen/thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/take_your_photo"
                android:layout_marginLeft="@dimen/five"
                android:id="@+id/textView14"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fifty"
            android:id="@+id/choose_photo_relative">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/add_photo_ico"
                android:layout_marginLeft="@dimen/thirteen"
                android:layout_marginStart="@dimen/thirteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/choose_photo"
                android:layout_marginLeft="@dimen/five"
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView2" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ten"/>

</LinearLayout>