<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/twenty"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/three_hundred"
        android:orientation="vertical"
        android:layout_height="@dimen/three_hundred_fifty_two">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/three_hundred_fifty_two">

        <ScrollView
            android:layout_width="@dimen/three_hundred"
            android:layout_above="@+id/relwithbut"
            android:layout_height="fill_parent">


            <TextView
                android:text="@string/first_run"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/textView3"
                android:padding="@dimen/five" />
        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relwithbut"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/forty_five">

            <Button
                android:text="@string/zxing_button_ok"
                android:id="@+id/dismiss_but"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>