<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/perfekcyjnetlo"
    tools:context="com.futurologeek.smartcrossing.SearchBookActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <ImageView
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/searchbookbutton"
            android:id="@+id/lupa" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/search_edit_text"
            android:layout_toStartOf="@+id/lupa"
            android:layout_toLeftOf="@+id/lupa"
            android:selectAllOnFocus="false" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/book_list_listview" />


</LinearLayout>
