<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perfekcyjnetlo"
    tools:context="com.futurologeek.smartcrossing.MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_above="@+id/add_point_trow"
        android:layout_height="match_parent"/>

    <TableRow
android:layout_height="@dimen/sixty"
        android:id="@+id/add_point_trow"
        android:layout_alignParentBottom="true"
android:layout_width="fill_parent">


        <TextView
            android:text="@string/add_point_instruction"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_tip_tv"
            android:layout_marginLeft="@dimen/fifteen" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button
                android:text="@string/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/add_point_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/ten" />

        </RelativeLayout>


    </TableRow>

</RelativeLayout>
