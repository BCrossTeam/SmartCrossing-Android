<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/perfekcyjnetlo"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TableRow android:layout_height="match_parent"
            android:layout_width="60dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/imageView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="TytuÅ‚"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_textview"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Autor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/author_textview"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
            </LinearLayout>

        </TableRow>

    </TableRow>

        <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/forty">


            <TextView
                android:text="@string/year"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_height="wrap_content"
                android:id="@+id/year_textview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/forty">


            <TextView
                android:text="@string/cat"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_height="wrap_content"
                android:id="@+id/category_textview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        </RelativeLayout>

        <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/forty">


    <TextView
        android:text="@string/isbn"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_height="wrap_content"
        android:id="@+id/isbn_textview"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
</RelativeLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sixty">


        <TextView
            android:text="@string/added_by"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_height="wrap_content"
            android:id="@+id/added_by_textview"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    </RelativeLayout>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/forty">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/forty"
        android:background="@drawable/loginbutton"
        android:id="@+id/visit_profile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visit_profile"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/eighteen"/>


</RelativeLayout>

</RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:id="@+id/relative_with_ui"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/eighty_five"
            android:weightSum="3"
            android:gravity="center">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbutton"
                    android:gravity="center"
                    app:layout_widthPercent="85%"
                    app:layout_heightPercent="45%"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_centerInParent="true"
                    android:id="@+id/profile_button"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:id="@+id/first_button_textview" />


                </TableRow>

            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="0dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <ImageView
                    app:layout_widthPercent="85%"
                    app:layout_heightPercent="85%"
                    android:src="@drawable/floatingbuttonimage"
                    android:id="@+id/add_button"
                    android:layout_centerInParent="true" />

            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbutton"
                    android:gravity="center"
                    app:layout_widthPercent="85%"
                    app:layout_heightPercent="45%"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_centerInParent="true"
                    android:id="@+id/settings_button"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:id="@+id/second_button_textview" />

                </TableRow>

            </android.support.percent.PercentRelativeLayout>

        </TableRow>

    </RelativeLayout>

</LinearLayout>
