<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/perfekcyjnetlo"
    android:paddingTop="@dimen/eight"
    tools:context="com.futurologeek.smartcrossing.RankingActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty">

        <TextView
            android:text="@string/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forty"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/two"
        android:background="@color/white"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/your_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fifteen"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five" />

        <TextView
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginLeft="@dimen/five"
            android:textSize="@dimen/fifteen" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/two"
        android:background="@color/white"/>

    <TableRow
android:layout_width="fill_parent"
android:weightSum="3"
android:layout_height="wrap_content">

        <LinearLayout
android:layout_width="0dp"
android:layout_weight="1"
android:orientation="vertical"
            android:layout_gravity="center_vertical"
android:gravity="center_horizontal"
android:layout_height="wrap_content">



            <TextView
                android:text="2"
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen"
                android:gravity="center_horizontal"
                android:id="@+id/pos_2" />

            <TextView
                android:text="nick2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sixteen"
                android:id="@+id/nick_2" />

            <TextView
                android:text="points2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sixteen"
                android:layout_marginBottom="@dimen/five"
                android:id="@+id/points_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">



            <TextView
                android:text="1"
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/eighteen"
                android:gravity="center_horizontal"
                android:id="@+id/pos_1" />

            <TextView
                android:text="nick1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="@dimen/eighteen"
                android:id="@+id/nick_1" />

            <TextView
                android:text="points1"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/eighteen"
                android:layout_marginBottom="@dimen/five"
                android:id="@+id/points_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">



            <TextView
                android:text="3"
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen"
                android:gravity="center_horizontal"
                android:id="@+id/pos_3" />

            <TextView
                android:text="nick3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sixteen"
                android:id="@+id/nick_3" />

            <TextView
                android:text="points3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sixteen"
                android:layout_marginBottom="@dimen/five"
                android:id="@+id/points_3" />
        </LinearLayout>

    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/two"
        android:background="@color/white"/>


    <TableRow
        android:weightSum="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_weight="0.15">

            <TextView
                android:text="@string/nr"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/fifteen"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:layout_height="wrap_content"
                android:id="@+id/nr_tv" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.65">

            <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/fifteen"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:layout_height="wrap_content"
                android:id="@+id/name_tv" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.20">

            <TextView
                android:text="@string/points_1"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/fifteen"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:layout_height="wrap_content"
                android:id="@+id/points_tv" />
        </RelativeLayout>

</TableRow>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/rank_list" />

</LinearLayout>