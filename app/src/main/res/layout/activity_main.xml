<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/perfekcyjnetlo"
    tools:context="com.futurologeek.smartcrossing.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <ImageView
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/searchbookbutton"
            android:id="@+id/lupa" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/search_edit_text"
            android:layout_toStartOf="@+id/lupa"
            android:layout_toLeftOf="@+id/lupa"
            android:selectAllOnFocus="false" />
    </RelativeLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >


        <TextView
            android:text="@string/near_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/forty"
                android:background="@drawable/loginbutton"
                android:layout_centerVertical="true"
                android:id="@+id/map_button"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/eighteen"/>

                </RelativeLayout>

            </TableRow>

        </RelativeLayout>
    </TableRow>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:layout_width="fill_parent"
            android:layout_above="@+id/relative_with_ui"
            android:id="@+id/book_list"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


        </ListView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/relative_with_ui"
            android:layout_height="@dimen/eighty_five"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/add_button">

                <TableRow
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/forty"
                    android:background="@drawable/loginbutton"
                    android:layout_centerVertical="true"
                    android:id="@+id/profile_button"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginTop="@dimen/five">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/eighteen" />

                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/forty"
                    android:background="@drawable/loginbutton"
                    android:id="@+id/settings_button"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/twenty"
                    android:layout_marginTop="@dimen/five">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/eighteen" />

                    </RelativeLayout>

                </TableRow>

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/eighty"
                android:layout_height="@dimen/eighty"
                android:src="@drawable/floatingbuttonimage"
                android:id="@+id/add_button"
                app:srcCompat="@drawable/floatingbuttonimage"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>