<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/twenty"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/three_hundred"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/twenty">

        </View>

        <RelativeLayout
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/thirty">


            <TextView
                android:text="@string/add_station"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/textView3" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/twenty">

        </View>


        <EditText
            android:inputType="textCapSentences"
            android:layout_width="fill_parent"
            android:id="@+id/add_bookshelf_name"
            android:textColorHint="@color/white"
            android:background="@color/fortyshadesofgrey"
            android:hint="@string/st_name"
            android:textColor="@color/white"
            android:layout_height="@dimen/forty"
            android:gravity="center" />


        <View
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/twenty">

        </View>

        <RelativeLayout
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/thirty">


            <TextView
                android:text="@string/latitude"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/latitude_info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/thirty">


            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/latitude" />
        </RelativeLayout>


        <View
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/twenty">

        </View>

        <RelativeLayout
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/thirty">


            <TextView
                android:text="@string/longitude"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/longitude_info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/thirty">


            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/longitude" />
        </RelativeLayout>


        <View
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/twenty"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/zxing_button_ok"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>